# Variables
CC = gcc # Compiler to be used
SRC = main.c school.c # .c source files (replace with your actual files)
OBJ = $(SRC:.c=.o) # Convert .c filenames to .o
NAME = school # Name of the executable
RM = rm -f # Program/command to delete files

# Default rule: all
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule for object files compilation
%.o: %.c
	$(CC) -c $< -o $@

# Rule to delete all Emacs and Vim temporary files and the executable
clean:
	$(RM) *~ \#*\# $(NAME)

# Rule to delete all object files
oclean:
	$(RM) $(OBJ)

# Rule to delete all Emacs and Vim temporary files, the executable, and the object files
fclean: clean oclean

# Rule to force recompilation of all source files
re:
	$(MAKE) fclean
	$(MAKE) all

.PHONY: all clean oclean fclean re